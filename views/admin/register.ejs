<%- include("../partials/header") %>
    <div class="container-fluid rounded w-50 mt-5 p-5 border border-2">
        <img src="/images/key.png" width="100px" height="100px" alt="logo">
        <form action="/admin/register" method="POST" id="login-form">
            <div class="mb-3 mt-4">
                <label for="exampleFormControlInput1" class="form-label">User Name</label>
                <input type="text" class="form-control" id="exampleFormControlInput1" name="username">
            </div>
            <div class="mb-3">
                <label for="inputPhone5" class="form-label">Phone</label>
                <input type="number" id="inputPhone5" class="form-control" aria-describedby="phoneHelpBlock"
                    name="phone">
            </div>
            <div class="mb-3">
                <label for="inputPassword5" class="form-label">Password</label>
                <input type="password" id="inputPassword5" class="form-control" aria-describedby="passwordHelpBlock"
                    name="password">
            </div>
            <div class="mb-3">
                <label for="inputPassword" class="form-label">Confirm Password</label>
                <input type="password" id="inputPassword" class="form-control" aria-describedby="passwordHelpBlock"
                    name="confirm-password">
            </div>
            <p class="text-danger" id="error-display"></p>
            <p class="text-danger">
                <%= error %>
            </p>
            <button type="submit" class="btn btn-dark btn-lg">Register</button>
        </form>
    </div>
    <script>
        const form = document.getElementById('login-form');
        const usernameInput = document.getElementById('exampleFormControlInput1');
        const phoneInput = document.getElementById('inputPhone5');
        const passwordInput = document.getElementById('inputPassword5');
        const confPasswordInput = document.getElementById('inputPassword');

        form.addEventListener('submit', (event) => {
            if (!usernameInput.value || !phoneInput.value || !passwordInput.value || !confPasswordInput.value) {
                event.preventDefault();
                document.getElementById("error-display").innerHTML = "Please fill in all fields.";
            } else {
                if (passwordInput.value.length < 6) {
                    event.preventDefault();
                    document.getElementById("error-display").innerHTML = "Password must be at least 6 characters long.";
                } if (phoneInput.value.length !== 10) {
                    event.preventDefault();
                    document.getElementById("error-display").innerHTML += "<br>Enter valid phone number.";
                } if (confPasswordInput.value !== passwordInput.value) {
                    event.preventDefault();
                    document.getElementById("error-display").innerHTML += "<br>Password and confirm password must be equal.";
                }
            }
        });
    </script>
    <%- include("../partials/footer") %>